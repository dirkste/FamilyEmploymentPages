---

<main class="page">
	<section class="card" aria-label="Profile">
		<header class="hero">
			<h1 class="name">{name}</h1>
			<p class="headline">{headline}</p>
			<p class="desc">{description}</p>
		</header>

		<div class="layoutGrid">
			<div class="primaryColumn">
				<div class="sideContainer">
					<p class="sideContainerTitle">Technology (sample)</p>
					<p class="sideContainerText">
						<span class="sideContainerLabel">{quickTechnology.label}:</span> {quickTechnology.value}
					</p>
				</div>
				<section class="section" aria-label="Summary">
					<h2>Summary</h2>
					<ul class="bullets">
						{summaryBullets.map((item) => (
							<li>{item}</li>
						))}
					</ul>
				</section>

				<section class="section" aria-label="Experience">
					<h2>Experience</h2>
					{experience.map((role) => (
						<article class="role">
							<header class="roleHeader">
								<h3 class="roleTitle">{role.title}</h3>
								<p class="roleMeta">
									<span class="roleCompany">{role.company}</span>
									{role.client ? <span> • <span class="roleClient">{role.client}</span></span> : null}
									{role.location ? <span> • {role.location}</span> : null}
									<span> • {role.start}–{role.end}</span>
								</p>
							</header>

							<ul class="bullets">
								{role.highlights.map((item) => (
									<li>{item}</li>
								))}
							</ul>

							{role.achievements?.length ? (
								<div class="examples">
									<h4>Successes &amp; achievements</h4>
									<ul class="examplesList">
										{role.achievements.map((item) => (
											<li>{item}</li>
										))}
									</ul>
								</div>
							) : null}

							{role.examples?.length ? (
								<div class="examples">
									<h4>Example work</h4>
									<ul class="examplesList">
										{role.examples.map((ex) => (
											<li>
												<span class="exampleTitle">{ex.title}:</span> {ex.detail}
											</li>
										))}
									</ul>
								</div>
							) : null}
						</article>
					))}
				</section>
			</div>

			<div class="centerColumn">
				<section class="section resume" aria-label="Resume">
					<h2>Resume</h2>
					<div class="resumePaper" aria-label="Resume preview">
						{resumeImageUrl ? (
							<img class="resumeImage" src={resumeImageUrl} alt={`Resume preview for ${name}`} loading="lazy" />
						) : (
							<div class="resumePlaceholder" aria-label="Resume placeholder">
								<p class="placeholderTitle">Resume placeholder</p>
								<p class="hint">We’ll add a PDF/image later.</p>
							</div>
						)}
					</div>

					<p class="actions">
						{resumeUrl ? (
							<a class="button" href={resumeUrl} target="_blank" rel="noreferrer noopener">Open resume</a>
						) : (
							<span class="button buttonDisabled" aria-disabled="true">Resume (coming soon)</span>
						)}
					</p>
				</section>
			</div>

			<aside class="sidebar" aria-label="Details">
				<section class="section" aria-label="Technology Experience">
					<h2>Technology</h2>
					<dl class="techTable">
						{technologyExperience.map((row) => (
							<div class="techRow">
								<dt class="techLabel">{row.label}</dt>
								<dd class="techValue">{row.value}</dd>
							</div>
						))}
					</dl>
				</section>

				<section class="section" aria-label="Recent Activity">
					<h2>Recent Activity</h2>
					<div class="activityList">
						{recentActivity.map((item) => (
							<article class="activityItem">
								<p class="activityMeta">
									<span class="activityDate">{item.date}</span>
									{item.link ? (
										<a class="activityLink" href={item.link.href} target="_blank" rel="noreferrer noopener">{item.link.label}</a>
									) : null}
								</p>
								<h3 class="activityTitle">{item.title}</h3>
								<p class="hint">{item.detail}</p>
								{item.tags?.length ? (
									<ul class="pills">
										{item.tags.map((t) => (
											<li class="pill">{t}</li>
										))}
									</ul>
								) : null}
							</article>
						))}
					</div>
				</section>

				<section class="section" aria-label="Skills">
					<h2>Skills</h2>
					{skills.map((group) => (
						<div class="skillGroup">
							<h3 class="skillTitle">{group.category}</h3>
							<ul class="pills">
								{group.items.map((item) => (
									<li class="pill">{item}</li>
								))}
							</ul>
						</div>
					))}
				</section>

				<section class="section" aria-label="Projects">
					<h2>Projects</h2>
					{projects.map((p) => (
						<article class="project">
							<h3 class="projectTitle">
								{p.link ? (
									<a class="projectLink" href={p.link} target="_blank" rel="noreferrer noopener">{p.name}</a>
								) : (
									p.name
								)}
							</h3>
							<p class="hint">{p.summary}</p>
							<ul class="pills">
								{p.tech.map((t) => (
									<li class="pill">{t}</li>
								))}
							</ul>
						</article>
					))}
				</section>

				<section class="section" aria-label="Education and Credentials">
					<h2>Education &amp; Credentials</h2>
					{education.map((e) => (
						<div class="eduRow">
							<p class="eduSchool">{e.school}</p>
							<p class="hint">{e.location} • {e.detail}</p>
						</div>
					))}
					<ul class="bullets">
						{certifications.map((c) => (
							<li>{c}</li>
						))}
					</ul>
				</section>
			</aside>
		</div>
	</section>
</main>

